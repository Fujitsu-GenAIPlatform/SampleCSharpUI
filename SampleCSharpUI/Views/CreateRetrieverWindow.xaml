<Window x:Class="SampleCSharpUI.Views.CreateRetrieverWindow"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleCSharpUI.Views"
        xmlns:prop="clr-namespace:SampleCSharpUI.Properties"
        xmlns:converter="clr-namespace:SampleCSharpUI.Converters"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        FontFamily="Meiryo UI"
        Title="新しいRAG"
        SizeToContent="Height" Width="550"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Mode=Self}}"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False}">
    <Window.Resources>
        <converter:NegativeConverter x:Key="NegativeConverter"/>
    </Window.Resources>

    <Grid Margin="6,6,6,6" IsEnabled="{Binding IsBusy,Converter={StaticResource NegativeConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="RAG名" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding RetrieverName, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2"/>
            <CheckBox Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="URL指定" Grid.ColumnSpan="2"
                      IsChecked="{Binding IsUseUrl, Mode=TwoWay}" />
            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Url, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2"/>
            <CheckBox Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                      IsChecked="{Binding IsUseFile, Mode=TwoWay}" />
            <Button Grid.Row="2" Grid.Column="1" Content="ファイル指定"
                    VerticalAlignment="Center" Width="88" Height="27" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="White" Margin="2,0,0,0"
                    Command="{Binding SelectFileCommand}"/>
            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding FileName, Mode=OneWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2" IsReadOnly="True" />
            <CheckBox Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"
                      IsChecked="{Binding IsUseFolder, Mode=TwoWay}" />
            <Button Grid.Row="3" Grid.Column="1" Content="フォルダ指定"
                    VerticalAlignment="Center"  Width="88" Height="27" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="White" Margin="2,0,0,0"
                    Command="{Binding SelectFolderCommand}"/>
            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding FolderName, Mode=OneWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2" IsReadOnly="True" />
        </Grid>
        <Grid Grid.Row="4" Margin="4,10,4,4" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Message, Mode=OneWay}" TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="0,0,5,0" Content="OK" Width="88" Height="27"
                FontWeight="Bold" FontSize="14" Background="White" 
				Command="{Binding SaveCommand}"/>
                <Button Content="Cancel" Margin="5,0,0,0" Width="88" Height="27"
                FontWeight="Bold" FontSize="14" Background="White">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction TargetObject="{Binding ElementName=window}" MethodName="Close" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>