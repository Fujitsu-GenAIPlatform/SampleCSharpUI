<UserControl x:Class="SampleCSharpUI.Views.MessagePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:SampleCSharpUI.Converters" 
             xmlns:prop="clr-namespace:SampleCSharpUI.Properties"
             xmlns:local="clr-namespace:SampleCSharpUI.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             FontFamily="Meiryo UI"
             mc:Ignorable="d" 
             d:DesignWidth="544">
    <UserControl.Resources>
        <converter:RoleToHorizontalAlignmentConverter x:Key="RoleToHorizontalAlignmentConverter"/>
        <converter:Boolean2VisibilityConverter x:Key="Boolean2VisibilityConverter"/>
        <converter:WidthPercentageConverter x:Key="WidthPercentageConverter"/>
        <!--<converter:MarkdownToFlowDocumentConverter x:Key="MarkdownToFlowDocumentConverter"/>-->
    </UserControl.Resources>

    <!-- Grid:UserControl全体 -->
    <VirtualizingStackPanel Orientation="Vertical" CanVerticallyScroll="false" IsVirtualizing="True" VirtualizationMode="Recycling" VerticalAlignment="Bottom">
        <Grid>
            <StackPanel HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToHorizontalAlignmentConverter}}"
                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.2}"
                        MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.9}">
                <Grid Margin="0,2,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- 左側の尾（左寄せ時に表示） -->
                    <Polygon x:Name="LeftTail" Grid.Column="0" Points="10,0 0,6 10,12" Fill="#FFF0F0F0" Stroke="#FFF0F0F0" StrokeThickness="1" VerticalAlignment="Center" Margin="-1,0,0,0">
                        <Polygon.Style>
                            <Style TargetType="Polygon">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Polygon.Style>
                    </Polygon>
                    <!-- コンテンツ本体 -->
                    <Border Grid.Column="1" Background="#FFF0F0F0" BorderBrush="#FFF0F0F0" BorderThickness="1" CornerRadius="8" Padding="8" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" Background="Transparent">
                            <!--<FlowDocumentScrollViewer Document="{Binding Content, Converter={StaticResource MarkdownToFlowDocumentConverter}}" BorderThickness="0" Background="Transparent"  />-->
                            <TextBox Text="{Binding Content, Mode=OneWay}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" Background="Transparent" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Padding="0" Opacity="0.6" Text="{Binding Time, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" />
                                <Button Margin="4,0,4,0" ToolTip="{x:Static prop:Resources.DisplayReference}" Background="Gray">
                                    <Grid>
                                        <Image Panel.ZIndex="1" Source="/Images/Detail.png"
                                               Stretch="UniformToFill"
                                               Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding DataContext.DisplayReferenceCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding Refs}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Refs.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <!-- 右側の尾（右寄せ時に表示） -->
                    <Polygon x:Name="RightTail" Grid.Column="2" Points="0,0 10,6 0,12" Fill="#FFF0F0F0" Stroke="#FFF0F0F0" StrokeThickness="1" VerticalAlignment="Center" Margin="0,0,-1,0">
                        <Polygon.Style>
                            <Style TargetType="Polygon">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Polygon.Style>
                    </Polygon>
                </Grid>
            </StackPanel>
        </Grid>
    </VirtualizingStackPanel>
</UserControl>