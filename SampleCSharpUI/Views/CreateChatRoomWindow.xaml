<Window x:Class="SampleCSharpUI.Views.CreateChatRoomWindow"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleCSharpUI.Views"
        xmlns:prop="clr-namespace:SampleCSharpUI.Properties"
        xmlns:converter="clr-namespace:SampleCSharpUI.Converters"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ia="http://schemas.microsoft.com/xaml/behaviors"
        FontFamily="Meiryo UI"
        Title="新しいルーム"
        SizeToContent="Height" Width="550"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Mode=Self}}"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False}">
    <Window.Resources>
        <converter:NegativeConverter x:Key="NegativeConverter"/>
    </Window.Resources>

    <Grid Margin="6,6,6,6" IsEnabled="{Binding IsBusy,Converter={StaticResource NegativeConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="ルーム名" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ChatRoomName, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2">
            </TextBox>
            <Label Grid.Row="1" Grid.Column="0" Content="RAG指定" VerticalAlignment="Center" />
            <ComboBox Grid.Row="1" Grid.Column="1" Height="34" VerticalContentAlignment="Center"
                      ItemsSource="{Binding Retrievers}"
                      SelectedItem="{Binding SelectedRetriever, Mode=TwoWay}"
                      SelectedValuePath="ID"
                      Margin="0,4,0,4">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <StackPanel Grid.Row="1" Margin="4,10,4,4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="0,0,5,0" Content="OK" Width="88" Height="27"
                    FontWeight="Bold" FontSize="14" Background="White" 
				    Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Margin="5,0,0,0" Width="88" Height="27"
                    FontWeight="Bold" FontSize="14" Background="White">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:CallMethodAction TargetObject="{Binding ElementName=window}" MethodName="Close" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>
