<Window x:Class="SampleCSharpUI.Views.SettingsWindow"
        x:Name="window" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleCSharpUI.Views"
        xmlns:prop="clr-namespace:SampleCSharpUI.Properties"
        xmlns:converter="clr-namespace:SampleCSharpUI.Converters"
        xmlns:Common="clr-namespace:SampleCSharpUI.Commons" 
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        FontFamily="Meiryo UI"
        Title="設定"
        SizeToContent="Height" Width="550"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Mode=Self}}"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False}">
    <Window.Resources>
        <converter:NegativeConverter x:Key="NegativeConverter"/>
    </Window.Resources>

    <Grid Margin="6,6,6,6" IsEnabled="{Binding IsBusy,Converter={StaticResource NegativeConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="4,0,4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="TenantName" VerticalAlignment="Center" Margin="0,0,0,0" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TenantName, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2"/>
            <Label Grid.Row="1" Grid.Column="0" Content="ClientId" VerticalAlignment="Center" Margin="0,0,0,0" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ClientId, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2" />
            <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="(高度なオプション) アプリ組込のユーザ認証画面が動作しないため、OS規定ブラウザを使用する" IsChecked="{Binding IsUseOSWebView, Mode=TwoWay}" VerticalAlignment="Center" Margin="4,0,0,0" />
            <Label Grid.Row="3" Grid.Column="0" Content="認証方式" VerticalAlignment="Center" Margin="0,0,0,0" />
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton Content="対話認証" IsChecked="{Binding IsPromptAuthentication, Mode=TwoWay}" GroupName="Authentication" Margin="4,0,4,0" />
                <RadioButton Content="非対話認証" IsChecked="{Binding IsPromptAuthentication, Converter={StaticResource NegativeConverter}, Mode=OneWay}" GroupName="Authentication" Margin="4,0,4,0"/>
            </StackPanel>
            <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="非対話認証" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <Label Grid.Row="5" Grid.Column="0" Content="ClientSecret" VerticalAlignment="Center" Margin="10,0,0,0" />
            <PasswordBox Grid.Row="5" Grid.Column="1" Common:PasswordBoxHelper.Password="{Binding ClientSecret, Mode=TwoWay}" Height="34" VerticalContentAlignment="Center" Margin="0,2,0,2" />
        </Grid>
        <StackPanel Grid.Row="1" Margin="4,10,4,4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="0,0,5,0" Content="OK" Width="88" Height="27"
                    FontWeight="Bold" FontSize="14" Background="White" 
				    Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Margin="5,0,0,0" Width="88" Height="27"
                    FontWeight="Bold" FontSize="14" Background="White">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:CallMethodAction TargetObject="{Binding ElementName=window}" MethodName="Close" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>
